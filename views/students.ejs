<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Data</title>
  <style>
    /* Table style */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      border: 1px solid #dddddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    /* Center align table */
    table {
      margin: 0 auto;
    }

    /* Header style */
    h1 {
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Student Data</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Roll No</th>
        <th>WAD</th>
        <th>DSBDA</th>
        <th>CNS</th>
        <th>CC</th>
        <th>AI</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.Name %></td>
          <td><%= student.Roll_No %></td>
          <td><%= student.WAD_Marks %></td>
          <td><%= student.DSBDA_Marks %></td>
          <td><%= student.CNS_Marks %></td>
          <td><%= student.CC_Marks %></td>
          <td><%= student.AI_Marks %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
